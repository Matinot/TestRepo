   "source": [
    "from flask import Flask\n",
    "from threading import Thread\n",
    "\n",
    "app = Flask(__name__)\n",
    "\n",
    "@app.route(\"/\")\n",
    "def home():\n",
    "    return \"Hello from Flask running in Jupyter!\"\n",
    "\n",
    "def run():\n",
    "    app.run(port=5000, debug=False, use_reloader=False)\n",
    "\n",
    "# Start Flask in a thread\n",
    "Thread(target=run).start()\n"
   ]
